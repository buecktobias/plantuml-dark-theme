@startuml
' Global font and shadow settings
skinparam defaultFontName "Roboto"
skinparam defaultFontSize 16
skinparam Shadowing false
skinparam packageStyle rectangle
skinparam stereotypeCBackgroundColor YellowGreen
skinparam stereotypeCCircleColor YellowGreen
skinparam CircledCharacterFontColor YellowGreen
skinparam ClassStereotypeFontColor white
skinparam CircledCharacterFontStyle bold
skinparam BoxPadding 20

<style>
:root {
  --color-bg-dark: #121212;
  --color-bg-light: #3e3e4e;
  --color-bg: #2e2e2e;
  --color-surface-elevated: #2a2a2a;
  --color-bg-front: #3a3a3a;
  --color-overlay: #00000080;
  --color-border: #2c2c2c;

  --color-primary: #90caf9;
  --color-primary-hover: #64b5f6;
  --color-primary-active: #42a5f5;

  --color-secondary: #ce93d8;
  --color-secondary-hover: #ba68c8;
  --color-secondary-active: #ab47bc;

  --color-accent: #ffb74d;
  --color-accent-hover: #ffa726;
  --color-accent-active: #ff9800;

  --color-success: #66bb6a;
  --color-warning: #ffa726;
  --color-error: #ef5350;
  --color-info: #29b6f6;

  --color-text-primary: #ffffff;
  --color-text-secondary: #cccccc;
  --color-text-muted: #999999;

  --color-red: #e06c75;
  --color-green: #98c379;
  --color-yellow: #e5c07b;
  --color-blue: #61afef;
  --color-purple: #c678dd;
  --color-teal: #56b6c2;

  --color-fg: var(--color-text-primary);
  --color-primary: var(--color-blue);
}

/* Universal defaults for all elements */
'*' {
  FontName "Roboto";
  FontSize 16;
  Padding 20;
}

/* Arrow styling */
arrow {
  LineThickness 2;
  FontColor var(--color-fg);
  FontSize 15;
  LineColor var(--color-primary);
}

/* === Class Diagram styles === */
classDiagram {
  BackgroundColor var(--color-bg-dark);
  LineColor var(--color-primary);

  class {
    BackgroundColor var(--color-bg-light);
    FontColor var(--color-fg);
    LineColor var(--color-primary);
    LineThickness 1;
    RoundCorner 8;
    Padding 20;
    Margin 10;
  }
  interface {
    BackgroundColor var(--color-bg-light);
    FontColor var(--color-fg);
    LineColor var(--color-teal);
    LineThickness 2;
    RoundCorner 5;
    Padding 8;
    Margin 10;
  }
  package {
    FontStyle bold;
    FontColor var(--color-fg);
    BackgroundColor var(--color-bg);
    LineColor var(--color-border);
    LineThickness 1.5;
    RoundCorner 5;
    Padding 20;
    Margin 20;
  }
}

/* === Component Diagram styles === */
componentDiagram {
  BackgroundColor var(--color-bg-dark);
  LineColor var(--color-secondary);

  component {
    BackgroundColor var(--color-bg-light);
    LineColor var(--color-secondary);
    LineThickness 2;
    RoundCorner 5;
    Padding 8;
    Margin 10;
  }
  interface {
    BackgroundColor var(--color-bg-light);
    LineColor var(--color-secondary);
    LineThickness 2;
    RoundCorner 5;
    Padding 8;
    Margin 10;
  }
  package {
    BackgroundColor var(--color-bg-dark);
    LineColor var(--color-border);
    LineThickness 1.5;
    RoundCorner 5;
    Padding 10;
    Margin 20;
  }
}

/* === Deployment Diagram styles === */
deploymentDiagram {
  BackgroundColor var(--color-bg-dark);
  LineColor var(--color-accent-active);

  node {
    BackgroundColor var(--color-bg-light);
    LineColor var(--color-accent-active);
    LineThickness 2;
    RoundCorner 5;
    Padding 8;
    Margin 10;
  }
  artifact {
    BackgroundColor var(--color-bg-light);
    LineColor var(--color-accent-active);
    LineThickness 2;
    RoundCorner 5;
    Padding 8;
    Margin 8;
  }
  component {
    BackgroundColor var(--color-bg-light);
    LineColor var(--color-accent-active);
    LineThickness 2;
    RoundCorner 5;
    Padding 8;
    Margin 8;
  }
  package {
    BackgroundColor var(--color-bg-dark);
    LineColor var(--color-border);
    LineThickness 1.5;
    RoundCorner 5;
    Padding 10;
    Margin 20;
  }
  database {
    BackgroundColor var(--color-bg-light);
    LineColor var(--color-accent-active);
    LineThickness 2;
    RoundCorner 5;
    Padding 8;
    Margin 8;
  }
}

/* === Common element styles (across all diagrams) === */
title {
  FontColor var(--color-fg);
  FontSize 18;
  FontStyle bold;
}
legend {
  BackgroundColor var(--color-surface-elevated);
  LineColor var(--color-border);
  FontColor var(--color-fg);
  RoundCorner 5;
  Padding 8;
}
note {
  BackgroundColor var(--color-surface-elevated);
  LineColor var(--color-border);
  FontColor var(--color-fg);
  LineStyle 4 4;
  Padding 5;
  RoundCorner 5;
}
</style>
@enduml
